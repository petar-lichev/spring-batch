<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
	xmlns="http://www.springframework.org/schema/batch"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
http://www.springframework.org/schema/batch
http://www.springframework.org/schema/batch/spring-batch-2.2.xsd">

	<beans:import resource="../launch-context.xml" />

	<!-- <beans:bean id="idIncrementer" class="org.springframework.batch.core.launch.support.RunIdIncrementer" 
		/> -->
	<beans:bean id="timestamperIncrementer"
		class="com.example.batchb.chapter4.DailyJobTimestamper" />

 <beans:bean autowire="default">
 </beans:bean>
	<beans:bean id="loggingListener"
		class="com.example.batchb.chapter4.JobLoggerListener" />

	<beans:bean id="helloWorld"
		class="com.example.batchb.job.HelloWorld">
	</beans:bean>

	<step id="helloWorldStep">
		<tasklet ref="helloWorld" />
	</step>

	<job id="helloWorldJob" restartable="true"
		incrementer="timestamperIncrementer">
		<listeners>
			<listener ref="loggingListener"/>
		</listeners>
		<step id="step1" parent="helloWorldStep" />
	</job>
</beans:beans>